<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="com.example.higormeirelles.mymoneys.CategoriasActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="CATEGORIAS"
            android:textSize="40sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtVerCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnEdtCategoria"
            android:layout_alignBottom="@+id/btnEdtCategoria"
            android:layout_alignParentStart="true"
            android:text="" />

        <Button
            android:id="@+id/btnEdtCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnExcCategoria"
            android:layout_alignBottom="@+id/btnExcCategoria"
            android:layout_toStartOf="@+id/btnExcCategoria"
            android:text="Salvar"
            android:onClick="salvar"/>

        <Button
            android:id="@+id/btnExcCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView7"
            android:text="Excluir"
            android:onClick="excluir"/>
    </RelativeLayout>



    <ListView
        android:id="@+id/listaCategorias"
        android:layout_width="wrap_content"
        android:layout_height="330dp"></ListView>

</LinearLayout>
