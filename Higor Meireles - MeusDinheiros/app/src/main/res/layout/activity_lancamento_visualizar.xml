<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.higormeirelles.mymoneys.LancamentoVisualizarActivity">

    <Button
        android:id="@+id/btnSalvarLcmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Salvar"
        android:visibility="invisible"
        android:onClick="salvarEdicaoLancamento"/>

    <Button
        android:id="@+id/btnCancelarLcmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Cancelar"
        android:visibility="invisible"
        android:onClick="cancelarEdicaoLancamento"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="106dp"
        android:text="Nome"
        android:textSize="20sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/edtNomeLcmt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:text="Nome"
        android:textSize="20sp"
        android:enabled="false"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtNomeLcmt"
        android:layout_marginTop="10dp"
        android:text="Categoria"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/cbCategoriaLcmt"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:text="Categoria"
        android:textSize="20sp"
        android:enabled="false"/>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cbCategoriaLcmt"
        android:layout_marginTop="10dp"
        android:text="Descrição"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtDescricaoLcmt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:text="Descrição"
        android:textSize="20sp"
        android:enabled="false"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtDescricaoLcmt"
        android:layout_marginTop="10dp"
        android:text="Detalhes"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtDetalhesLcmt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:text="Detalhes"
        android:textSize="20sp"
        android:enabled="false"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edtNomeLcmt"
        android:layout_alignStart="@+id/textView"
        android:text="Data"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtDataLcmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:enabled="false"
        android:inputType="date"
        android:text="Data"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cbCategoriaLcmt"
        android:layout_marginEnd="18dp"
        android:layout_toStartOf="@+id/btnSalvarLcmt"
        android:text="Valor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtValorLcmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:textSize="20sp"
        android:enabled="false"/>


</RelativeLayout>
